<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrar_empleado"
    tools:context=".RegistrarEmpleado">

    <Button
        android:id="@+id/btnChatRE"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="93dp"
        android:layout_height="79dp"
        android:background="@drawable/chat_bubbles_with_ellipsis"
        android:textColor="#2572AC"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_Identificacion2"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:backgroundTint="#354D5E"
        android:hint="Nro. Identificación"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.413" />

    <Spinner
        android:id="@+id/sp_TipoIdentificacion2"
        android:layout_width="322dp"
        android:layout_height="47dp"
        android:clickable="true"
        android:clipChildren="true"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        android:text="Tipo de identificación"
        android:textAlignment="textStart"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.355" />

    <Button
        android:id="@+id/btnRegistrarEmp"
        android:layout_width="347dp"
        android:layout_height="70dp"
        android:backgroundTint="#3690CF"
        android:text="GUARDAR"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.804" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/textInputApellido3"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:backgroundTint="#354D5E"
        android:hint="Apellido"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.516" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_Telefono3"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:backgroundTint="#354D5E"
        android:hint="Teléfono"
        android:inputType="phone"
        android:phoneNumber="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.615" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_correo3"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:backgroundTint="#354D5E"
        android:hint="Correo"
        android:inputType="textEmailSubject"
        android:shadowColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_Nombre9"
        android:layout_width="322dp"
        android:layout_height="39dp"
        android:backgroundTint="#354D5E"
        android:hint="Nombre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.853"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.464" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo_waitbox_png_3" />

</android.support.constraint.ConstraintLayout>