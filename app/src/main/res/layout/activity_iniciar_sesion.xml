<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grupo_90_2"
    tools:context=".IniciarSesion">


    <Button
        android:id="@+id/btnOC"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="205dp"
        android:layout_height="37dp"
        android:fontFamily="sans-serif-medium"
        android:text="¿Olvidaste tu contraseña?"
        android:textColor="#353D5E"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.634"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.866" />

    <Button
        android:id="@+id/btnIniciarSesion_is"
        android:layout_width="347dp"
        android:layout_height="70dp"
        android:backgroundTint="#FF8103"
        android:text="INICIAR SESIÓN"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.705"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.808" />

    <Spinner
        android:id="@+id/sp_TipoIdentificacion_is"
        android:layout_width="322dp"
        android:layout_height="47dp"
        android:clickable="true"
        android:clipChildren="true"
        android:dropDownWidth="wrap_content"
        android:spinnerMode="dropdown"
        android:text="Tipo de identificación"
        android:textAlignment="textStart"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.544" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_contrasena_is"
        android:layout_width="322dp"
        android:layout_height="44dp"
        android:backgroundTint="#354D5E"
        android:hint="Contraseña"
        android:inputType="textEmailSubject"
        android:shadowColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.685" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/editText_correo_is"
        android:layout_width="322dp"
        android:layout_height="49dp"
        android:backgroundTint="#354D5E"
        android:hint="Correo"
        android:inputType="textEmailSubject"
        android:shadowColor="#00000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.854"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613" />
</android.support.constraint.ConstraintLayout>